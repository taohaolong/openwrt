+	bus = ssb_dev->bus;
+	if (bus->suspend_cnt == bus->nr_devices)
+		ssb_bus_resume(bus);
+	bus->suspend_cnt--;
+	if (dev->driver) {
+		ssb_drv = drv_to_ssb_drv(dev->driver);
+		if (ssb_drv && ssb_drv->resume)
